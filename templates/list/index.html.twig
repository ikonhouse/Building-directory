{% extends 'base.html.twig' %}

{% block title %}Directory listing{% endblock %}


{% block body %}
{% set testLetter = '' %}

    <div class="navbar navbar-inverse navbar-fixed-right">
        <a class="navbar-brand" href="#">Search</a>
        <ul class="nav navbar-nav">
                {% for letter in letters %}
                    <li>
                        <a href="#{{ letter }}">{{ letter }}</a>
                    </li>
                {% endfor %}
        </ul>
    </div>


    <div class="container">
        <div class="row">

            {% for tennant in tennants %}
                <ul class="table">
                    {% if tennant.name|first|upper != testLetter %}

                        {% set testLetter = tennant.name|first|upper %}
                        <h1><a name="{{ testLetter }}">{{ testLetter }}</h1>

                    {% endif %}
                    <li>{{ tennant.name }} : {{ tennant.number }}</li>
                </ul>
            {% endfor %}

        </div>
    </div>






{% endblock %}
